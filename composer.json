{
    "name": "danyspin97/php-bot-framework",
    "description": "Php Bot Framework is a lightweight framework for Telegram Bots' APIs.",
    "version": "1.0.0",
    "type": "library",
    "license": "LGPL-3.0+",
    "keywords": ["telegram", "bot", "framework", "telegram-bot"],
    "homepage": "https://danyspin97.github.io/PhpBotFramework",
    "authors": [
        {
            "name": "Dany Spin",
            "homepage": "https://github.com/danyspin97",
            "role": "Developer"
        },
        {
            "name": "TheSeeker",
            "homepage": "https://github.com/domcorvasce",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-redis": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.4.*"
    },
    "suggest": {
        "ext-mysql": "*",
        "ext-pgsql": "*"
    },
    "autoload": {
        "psr-4": {
            "DanySpin97\\PhpBotFramework\\": ["lib/framework", "lib/hades-sql"]
        }
    },
    "archive": {
        "exclude": ["/examples", "/templates", "/tests", "/ci", "/*.md", "phpunit.xml"]
    }
}
